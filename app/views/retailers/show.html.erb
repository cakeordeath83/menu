<p id="notice"><%= notice %></p>


<h2>Welcome <%= @retailer.name %></h2>

<p>
  <strong>Name:</strong>
  <%= @retailer.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @retailer.address %>
</p>

<p>
  <strong>Description:</strong>
  <%= @retailer.description %>
</p>

<p>
  <strong>Items:</strong>
  <% @retailer.items.each do |item| %>
  <%= item.name %>
  <%= item.price %>
  <%=  item.category %>
  <% end %>
</p>

<%= link_to 'Add new Items', new_retailer_item_path(@retailer) %>
<%= link_to 'Edit shop details', edit_retailer_path(@retailer) %> |
