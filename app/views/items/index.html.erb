<p id="notice"><%= notice %></p>
<div class="container">
  <div class="page-header text-center">
    <h1>Menu for <%= @retailer.name %></h1>
  </div>

    <div class="col-md-6">
      <% @retailer.grouped_items.each do |key, items| %>
        <h2><%= key %></h2>
        <table class=" table table-bordered table-condensed">
          <thead>
            <th>Name</th>
            <th>Price</th>
          </thead>
          <tbody>
            <% items.each do |item| %>
               <tr>
                 <td><%= item.name %></td>
                 <td><%= number_to_currency(item.price.to_f, :unit => "Â£") %></td>
                 <td><%= link_to 'Edit', edit_retailer_item_path(@retailer, item) %></td>
                 <td><%= link_to 'Delete', retailer_item_path(@retailer, item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
               </tr>
            <% end %>
         </tbody>
      </table> 
     <% end %>
    </div>
  
  <div class="retailer-details col-md-3">
    <h2><%= @retailer.name%></h2> <br>
    <%= @retailer.description%><br>
    <br>
    <%= @retailer.address %><br>
    <%= @retailer.address2 %><br>
    <%= @retailer.address3 %><br>
    <%= @retailer.postcode %><br>
    <br>
    <p>Opening hours: <%= @retailer.openinghours %></p><br>
  </div>

  <div class=" container bottomlinks">
    <div class="col-md-2 col-md-offset-5">
    <button class="btn-default"><%= link_to 'Add New Item', new_retailer_item_path %></button>
    </div>
  </div>
</div>