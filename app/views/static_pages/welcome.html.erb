<div>
  <div class="jumbotron">
    <h1>What's for lunch today?</h1>
  
  <div class="col-md-offset-3 col-md-8" id="find-retailer">
    <div class="col-md-3" >
      <h5>Find a retailer</h5>
      <div class="form-group">
             <%= form_tag(retailers_path, :method => "get") do %>
               <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search retailers" %>
             <% end %>
             <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>

    <div class="col-md-3 ">
      <h5>Find food</h5>
     <div class="form-group dropdown">
             <%= select_tag "category_id", options_from_collection_for_select(Category.all, "id", "category") %>
             <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>

    <div class="col-md-3 ">
      <h5>Not sure what you fancy?</h5>


      <button class="btn btn-lg"><%= link_to "Surprise me!", items_random_path %> </button>
        </div>
    </div>
  </div>
</div>
  
  
  
</div>