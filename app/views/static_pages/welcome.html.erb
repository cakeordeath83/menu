<div class="landing-image">
  <div>
    <h1>What's for lunch today?</h1>
  
  <!-- Find a retailer -->
  <div class="col-md-offset-3 col-md-9" id="find-retailer">
    <div class="col-md-3" >
      <h5>Find a retailer</h5>
      <div class="form-group">
             <%= form_tag(retailers_path, :method => "get") do %>
               <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search retailers" %>
             <% end %><br>
             <button type="submit" class="btn btn-default">Submit</button>
     </div>
  </div>
    
  <!-- Find food -->
  <div class="col-md-3 ">
    <h5>Find food</h5>
      <div class="form-group">
        <%= select_tag :category_id, options_from_collection_for_select(Category.all, "id", "category"),  {class: "form-control"} %><br>
        <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>

      <!-- Surprise me -->
    <div class="col-md-3 ">
      <h5>Not sure what you fancy?</h5>
       <button class="btn btn-lg"><%= link_to "Surprise me!", items_random_path %> </button>
    </div>
    
  </div> <!-- jumbotron -->
</div>




  
  
