<div>
  <div class="jumbotron">
    <h1>What's for lunch today?</h1>
    <div class="container">
    <div class="row">
      <div id="find-retailer">
        
       <!-- Find food -->
       <div class="col-md-4" >
        <h3>Search for closest</h3>
             <div class="form-group" style="width:300px; padding-left:55px;">
             <%= form_tag(retailers_path, :method => "get") do %>
             <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Enter your postcode" %><br>
             <button class="btn btn-default", type="submit">Submit</button>
             <% end %>
          </div>
       </div>
        
        <!-- Surprise me -->
        <div class="col-md-4 ">
          <h3>Not sure what you fancy?</h3>
          <%= link_to "Surprise me!", items_random_path, class: "btn btn-default btn-lg" %> 
        </div>
        
        <!-- Find a retailer -->
        <div class="col-md-4" >
          <h3>Find a retailer</h3>
            <div class="form-group" style="width:300px; padding-left:55px;">
              <%= form_tag(retailers_path, :method => "get") do %>
              <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search retailers" %><br>
              <button class="btn btn-default", type="submit">Submit</button>
              <% end %>
            </div>
        </div>
 
      </div> <!--container -->
    </div><!--row -->
  </div><!-- find-retailer -->  
</div> <!-- jumbotron -->
  
<div class="container">
  <div class="row">
    
    <div class="welcomebox col-md-4">
      <h3>See all retailers</h3>
      <p>Prefer to see a list of all the retailers?</p> 
      <p>Click below to see the list </p>
      <%= link_to "Show me everyone", retailers_path, class:"btn btn-default" %>
    </div>
    
    <div class="welcomebox col-md-4">
      <h3>Find a retailer</h3>
      <p>Know which retailer you want? Just type the name in the box below to see their menu</p>
            <div class="form-group" style="width:300px; padding-left:55px;">
              <%= form_tag(retailers_path, :method => "get") do %>
              <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search retailers" %><br>
              <button class="btn btn-default", type="submit">Submit</button>
              <% end %>
            </div>
    </div>
    
    <div class="welcomebox col-md-4">
      <h3>Are you a retailer?</h3>
      <p>Do you want your menu displayed alongside the others? Sign up now and start adding your menu</p>
      <%= link_to "Sign up", signup_path, class: "btn btn-default" %>
    </div>
  
  </div><!-- row -->
</div><!-- container-->




  
  
  
</div>